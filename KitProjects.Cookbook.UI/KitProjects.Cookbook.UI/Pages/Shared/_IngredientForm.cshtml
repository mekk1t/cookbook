@using KitProjects.Cookbook.Domain.Models
@{
    Layout = null;
    string name = $"{Model.Prefix}[{Model.Order}]";
}

@model KitProjects.Cookbook.UI.Models.IngredientFormModel
<div class="ingredient">
    <input type="hidden" name="@(name).Ingredient.Id" value="@Model.Ingredient.Id" />
    <label>Название</label>
    <input type="text" readonly name="@(name).Ingredient.Name" value="@Model.Ingredient.Name" />
    <label>Тип</label>
    <input type="text" readonly name="@(name).Ingredient.Type" value="@Model.Ingredient.Type" />
    <label>Количество</label>
    <input type="number" step="any" name="@(name).Amount" />
    <label>Мера объема</label>
    <select name="@(name).Measure" asp-items="Html.GetEnumSelectList<IngredientMeasure>()"></select>
    <label>Необязательный</label>
    <input type="checkbox" name="@(name).Optional" value="true"/>
</div>