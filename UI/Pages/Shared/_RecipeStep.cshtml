@model int
@{ Layout = null; }
<div class="w3-margin-bottom" id="step-@(Model)">
    <header class="w3-container w3-green w3-margin-bottom">
        <h4>Шаг @(Model + 1)</h4>
    </header>
    <input type="hidden" value="@(Model + 1)" name="Recipe.Steps[@(Model)].Order"/>
    <div class="w3-row w3-margin-bottom">
        <div class="w3-rest">
            <label>Описание</label>
            <textarea placeholder="Подробно опишите, что делать на этом шаге" style="min-height: 100px;" class="w3-input w3-border" name="Recipe.Steps[@(Model)].Description"></textarea>
        </div>
    </div>
    <div class="w3-row">
        <div class="w3-half">
            <label>Картинка</label>
            <input type="hidden" value="@(Model + 1)" name="StepForms[@(Model)].StepOrder" />
            <input class="w3-input w3-border h-3" type="file" name="StepForms[@(Model)].Picture" />
        </div>
        <div class="w3-half">
            <label>Продолжительность в минутах</label>
            <input class="w3-input w3-border h-3" type="number" step="1" name="Recipe.Steps[@(Model)].Duration"/>
        </div>
    </div>
    <h5>Ингредиенты шага №@(Model + 1)</h5>
    <div id="step-@(Model)-ingredients" class="w3-margin-bottom">
        <div class="w3-row">
            <div class="w3-rest">
                <select id="step-@(Model)-ingredients-select-list" class="w3-select">
                    <option></option>
                </select>
            </div>
        </div>
    </div>
</div>
